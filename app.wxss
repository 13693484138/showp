.float-r {
  float: right;
}
.float-l {
  float: left;
}
.clearfix:after {
  content: "";
  display: table;
  clear: both;
}
.flex-row {
  display: -webkit-box;
  display: flex;
  -webkit-box-align: center;
          align-items: center;
}
.flex-col {
  display: -webkit-box;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
          flex-direction: column;
  -webkit-box-align: center;
          align-items: center;
}
.flex-row.flex-around {
  justify-content: space-around;
}
.flex-row.flex-between {
  -webkit-box-pack: justify;
          justify-content: space-between;
}
.flex-row.flex-start {
  -webkit-box-pack: start;
          justify-content: flex-start;
}
.flex-row.flex-end {
  -webkit-box-pack: end;
          justify-content: flex-end;
}
.flex-row.flex-center {
  -webkit-box-pack: center;
          justify-content: center;
}
.ellipse {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.ellipse-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
}
.right-arrow {
  position: relative;
}
.right-arrow:after {
  position: absolute;
  top: 50%;
  right: 20rpx;
  -webkit-transform: translateY(-50%) rotate(-45deg);
  transform: translateY(-50%) rotate(-45deg);
  content: "";
  display: block;
  width: 18rpx;
  height: 18rpx;
  border-width: 4rpx;
  border-style: solid;
  border-color: #ccc;
  border-top-width: 0;
  border-left-width: 0;
}
