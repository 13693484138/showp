/* pages/orderList/orderList.wxss */

.scroll-cls {
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  white-space: nowrap;
  background-color: #fff;
  position: relative;
}

.scroll-item {
  width: 25%;
  display: inline-block;
  text-align: center;
  /* padding: 0rpx 30rpx; */
  font-size: 16px;
  color: #333;
  height: 90rpx;
  line-height: 90rpx;
}

.scroll-item.active {
  color: #dc3c14;
}

.slide-line {
  position: absolute;
  top: 86rpx;
  left: 0;
  height: 4rpx;
  background-color: #dc3c14;
  width: 25%;
  transition: all linear 320ms;
  -webkit-transition: all linear 320ms;
  -moz-transition: all linear 320ms;
  -ms-transition: all linear 320ms;
  -o-transition: all linear 320ms;
}

.orderList-top {
  width: 100%;
  height: 80rpx;
  vertical-align: middle;
  display: flex;
  align-items: center;
  justify-content: center;
  justify-items: center;
}

.orderList-top-botoom {
  font-size: 28rpx;
  width: 200rpx;
  height: 50rpx;
  text-align: center;
  vertical-align: middle;
  line-height: 50rpx;
  display: inline-block;
  border: 2rpx solid #dfdfdf;
}

.orderList-top-botoom:first-child {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-right: 0;
}

.orderList-top-botoom:last-child {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  border-left: 0;
}

.list-active {
  background: #333;
  color: #fff;
}

