/* pages/orderList/orderList.wxss */
.scroll-cls {
    padding:0 20rpx;
    box-sizing: border-box;
    width:100%;
    white-space: nowrap;
    background-color: #fff;
    position: relative;
    
}
.scroll-item {
    width: 25%;
    display:inline-block;
    text-align: center;
    /* padding: 0rpx 30rpx; */
    font-size:16px;
    color:#333;
    height: 90rpx;
    line-height: 90rpx;
}
.scroll-item.active {
    color:#dc3c14;
}
.slide-line {
    position: absolute;
    top:86rpx;
    left:0;
    height: 4rpx;
    background-color:#dc3c14;
    width:25%;
    transition: all linear 320ms;
    -webkit-transition: all linear 320ms;
    -moz-transition: all linear 320ms;
    -ms-transition: all linear 320ms;
    -o-transition: all linear 320ms;
}
