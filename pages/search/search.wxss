
/* 搜索部分*/
.header{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid silver;
 
}
.fangdajing{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
}
.fangdajing>image{
  width: 60rpx;
  height: 60rpx;
}
.inputBox{
  width: 80%;
  height: 60rpx;
  border-radius: 5px;
  border: 1px solid silver;
  display: flex;
  align-items: center
}
.inputBox input{
  display: inline-block;
  width: 86%;
  height: 60rpx;
  font-size: 14px;  
}
.cancel{
  width: 10%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 14px;
  color: black
}
/* 热搜部分 */
.hotSearch{
  width: 94%;
  margin: 0 auto;
}
.hotContent{
  width: 100%;
  height: 80rpx;
  border: 1px solid black
}
/* 历史记录 */
.history{
  width: 94%;
  margin:0 auto;
  display: flex;
  justify-content: space-between
}
.hisContent{
  width: 94%;
  margin:0 auto;
  height: 100rpx;
  border: 1px solid black;
}


