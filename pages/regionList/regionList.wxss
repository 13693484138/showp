.region-list{
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    flex-wrap:wrap;
    justify-content:space-between;
}
.region-list-item{
    width: 320rpx;
    height: 489rpx;
    border: 3rpx solid #dfdfdf;
    text-align: center;
    margin: 0 25rpx;
    margin-top: 30rpx;
}
.region-list-item:last-child{
    margin-bottom: 30rpx;
}
.region-list-text{
    text-align: left;
    font-size: 28rpx;
    padding-top: 20rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    height:93rpx;
    border-top: 3rpx solid #dfdfdf;
    border-bottom: 3rpx dotted #dfdfdf;
}
.region-list-item-img image{
    width: 172rpx;
    height: 259rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.region-list-mony{
    color: #f44054;
}
